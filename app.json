      },
      {
        "id": "HM-SwI-3-FM-pressed-3",
        "title": {
          "en": "Button 3 Pressed"
        },
        "args": [
          {
            "name": "HM-SwI-3-FM",
            "type": "device",
            "filter": "driver_id=HM-SwI-3-FM"
          }
        ]
      }
    ]
  },
