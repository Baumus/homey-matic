{
  "id": "de.twendt.homey.matic",
  "version": "1.0.0",
  "compatibility": ">=1.5.0",
  "sdk": 2,
  "name": {
    "en": "Homematic"
  },
  "description": {
    "en": "Connect Homematic with Homey"
  },
  "category": [
    "tools"
  ],
  "permissions": [],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Timo Wendt",
    "email": "homey@tjwendt.de"
  },
  "capabilities": {
    "homematic_thermostat_mode": {
      "type": "enum",
      "values": [
        {
          "id": "0",
          "title": {
            "en": "Auto",
            "nl": "Auto"
          }
        },
        {
          "id": "1",
          "title": {
            "en": "Manu",
            "nl": "Manu"
          }
        }
      ],
      "title": {
        "en": "Mode"
      },
      "uiComponent": "picker",
      "getable": true,
      "setable": true
    },
    "homematic_thermostat_boost": {
      "type": "boolean",
      "title": {
        "en": "Boost"
      },
      "uiComponent": "button",
      "getable": true,
      "setable": true
    }
  },
  "flow": {
    "triggers": [
      {
        "id": "HM-SwI-3-FM-pressed-1",
        "title": {
          "en": "Button 1 Pressed"
        },
        "args": [
          {
            "name": "HM-SwI-3-FM",
            "type": "device",
            "filter": "driver_id=HM-SwI-3-FM"
          }
        ]
      },
      {
        "id": "HM-SwI-3-FM-pressed-2",
        "title": {
          "en": "Button 2 Pressed"
        },
        "args": [
          {
            "name": "HM-SwI-3-FM",
            "type": "device",
            "filter": "driver_id=HM-SwI-3-FM"
          }
